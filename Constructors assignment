public class ConstructorsAsign {

        private String title;
        private String code;
        private double points;
        private String instructor;
        
        //constructor
        public ConstructorsAsign(String title, String code, double points, String instructor) {
        this.title = title;
        this.code = code;
        this.points = points;
        this.instructor = instructor;
    }
        
    // Constructor with course name only
    public ConstructorsAsign(String title) {
        this.title = title;
    }

    // Getters
    public String getTitle() {
        return title;
    }

    public String getCode() {
        return code;
    }

    public double getPoints() {
        return points;
    }

    public String getInstructor() {
        return instructor;
    }

    // Setters
    public void setTitle(String title) {
        this.title = title;
    }

    public void setCourseCode(String code) {
        this.code = code;
    }

    public void setPoints(double points) {
        this.points = points;
    }

    public void setInstructor(String instructor) {
        this.instructor = instructor;
    }

    // toString method
    @Override
    public String toString() {
        return "Course Title: " + title + "\n" +
               "Course Code: " + code + "\n" +
               "Total Points: " + points + "\n" +
               "Instructor: " + instructor + "\n";
    }

    // Driver class to test the Course class
    public static void main(String[] args) {
        // Create course objects
        ConstructorsAsign csCourse = new ConstructorsAsign("Computer Science", "CS AP A", 5.0, "Mr. Nelson");
        ConstructorsAsign mathCourse = new ConstructorsAsign("Mathematics");
        mathCourse.setCourseCode("AP Calculus BC");
        mathCourse.setPoints(5.0);
        mathCourse.setInstructor("Dr. Dahms");

        ConstructorsAsign physicsCourse = new ConstructorsAsign("Physics", "AP Physics 1", 5.0, "Ms. Raphie");

        // Print course details
        System.out.println(csCourse);
        System.out.println(mathCourse);
        System.out.println(physicsCourse);
    }
}
