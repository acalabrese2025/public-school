import java.util.Scanner;
import java.text.NumberFormat;

public class InterestRate {
    public static void main(String[] args) {
        InterestCalc dollars = new InterestCalc();
        Scanner scanner = new Scanner(System.in);

        // Input amount
        System.out.println("Enter Financial Amount: ");
        double amount = scanner.nextDouble();

        // Input number of months
        System.out.println("Number of Months: ");
        double months = scanner.nextDouble();

        // Input monthly payment wanted
        System.out.println("Please enter monthly payment wanted: ");
        double monthsWanted = scanner.nextDouble();

        // Set values in InterestCalc object
        dollars.setMoney(amount);
        dollars.setMonths(months);
        dollars.setMonthsWanted(monthsWanted);

        // Print result
        System.out.println(dollars);
    }
}

class InterestCalc {
    private final double RATE = 0.035; // set interest rate at 3.5%
    private double inAmount;
    private double inMonths;
    private double monthsWanted;

    // Set the amount of money
    public void setMoney(double moneyIn) {
        inAmount = moneyIn;
    }

    // Set the number of months
    public void setMonths(double monthsIn) {
        inMonths = monthsIn;
    }

    // Set the number of months wanted
    public void setMonthsWanted(double inMonthsWanted) {
        monthsWanted = inMonthsWanted;
    }

    // Calculate and return the result as a string
    @Override
    public String toString() {
        double result = ((inAmount / inMonths) * Math.pow((1 + RATE), monthsWanted));
        NumberFormat currencyFormat = NumberFormat.getCurrencyInstance();
        String realResult = "Your Monthly Payment for month " + monthsWanted + " is " + currencyFormat.format(result);
        return realResult;
    }
}
